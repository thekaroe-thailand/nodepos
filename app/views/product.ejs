<%- include("header") %>
    <div class="container mt-3">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-th"></i> สินค้า
            </div>
            <div class="card-body">
                <a href="/productForm" class="btn btn-danger">
                    <i class="fa fa-plus"></i> เพิ่มรายการ
                </a>

                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th width="100px">barcode</th>
                            <th>ชื่อสินค้า</th>
                            <th width="120px" class="text-right">ราคาทุน</th>
                            <th width="130px" class="text-right">ราคาจำหน่าย</th>
                            <th width="110px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(item => { %>
                            <tr>
                                <td>
                                    <%= item.barcode %>
                                </td>
                                <td>
                                    <%= item.name %>
                                </td>
                                <td class="text-right">
                                    <%= item.cost %>
                                </td>
                                <td class="text-right">
                                    <%= item.price %>
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-primary" href="/productEdit/<%= item.id %>">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a class="btn btn-danger" onclick="return confirm('Delete ?')" href="/productDelete/<%= item.id %>">
                                        <i class="fa fa-close"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include("footer") %>